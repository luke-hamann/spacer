@model List<Post>
@{
    ViewData["Title"] = "Search for \"" + ViewBag.searchQuery + "\"";
}

<h1>
    @ViewData["Title"]
</h1>

<div>
    @Model.Count post@(Model.Count == 1 ? "" : "s")
</div>

@if (Model.Count > 0)
{
    <div class="container row row-gap-3 mt-3">
        @foreach (var post in Model)
        {
            @await Html.PartialAsync("~/Views/Shared/_Post.cshtml", post)
        }
    </div>
}

