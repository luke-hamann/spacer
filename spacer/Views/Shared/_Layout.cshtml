<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body class="container mt-4 bg-dark text-light rounded">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mb-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    Home
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <form asp-controller="Home" asp-action="Search" method="get" role="search" class="d-flex navbar-search-form">
                        <select name="subspaceId">
                            <!option value="0" @(ViewBag.searchSubspaceId == 0 ? "selected" : "") >
                                (all)
                            </!option>
                            @foreach (Subspace subspace in ViewBag.popularSubspaces)
                            {
                                <!option value="@subspace.id" @(ViewBag.searchSubspaceId == subspace.id ? "selected" : "") >
                                    @subspace.name
                                </!option>
                            }
                        </select>
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="q" value="@ViewBag.searchQuery" autocomplete="off">
                        <button class="btn btn-outline-success" type="submit">
                            Search
                        </button>
                    </form>
                    <ul class="navbar-nav">
                        @if (ViewBag.currentUser == null)
                        {
                            <li class="nav-item">
                                <a asp-area="Account" asp-controller="Account" asp-action="Login" asp-route-returnTo="@Context.Request.Path" class="nav-link">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Account" asp-controller="Account" asp-action="Register" asp-route-returnTo="@Context.Request.Path" class="nav-link">
                                    Register
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="User" asp-route-name="@ViewBag.currentUser.name" class="nav-link">
                                    Logged in as @ViewBag.currentUser.name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Account" asp-controller="Account" asp-action="Logout" asp-route-returnTo="@Context.Request.Path" method="post" class="d-flex">
                                    <button type="submit" class="btn btn-danger">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer class="p-2 pt-5 pb-5">
        &copy; 2024 Yasin, Rohan, &amp; Luke
    </footer>
</body>
</html>
