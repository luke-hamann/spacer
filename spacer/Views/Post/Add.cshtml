@model Post
@{
    ViewData["Title"] = "New Post";
}

<div class="d-flex justify-content-center">
    <form asp-controller="Post" asp-action="Add" method="post" class="form-horizontal col-lg-6">
        <input type="hidden" asp-for="userId" value="@ViewBag.currentUser.id" />
        <h1>
            @ViewData["Title"]
        </h1>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="forumId" class="form-label">
                Subspace
            </label>
            <select asp-for="forumId" class="form-select">
                @foreach (Subspace subspace in ViewBag.popularSubspaces)
                {
                    <option value="@subspace.id">@subspace.name</option>
                }
            </select>
        </div>
        <div class="mt-2">
            <label asp-for="title" class="form-label">
                Title
            </label>
            <input asp-for="title" class="form-control" />
        </div>
        <div class="mt-2">
            <label asp-for="content" class="form-label">
                Content
            </label>
            <textarea asp-for="content" rows="7" class="form-control"></textarea>
        </div>
        <div class="mt-5 d-flex justify-content-center">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
